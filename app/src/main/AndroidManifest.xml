<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.test.anton.museumapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.test.anton.museumapp.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.test.anton.museumapp.museum.exhibitions.ExhibitionsListActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.test.anton.museumapp.museum.exhibdetails.ExhibitionDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensorPortrait">
        </activity>

        <activity
            android:name="com.test.anton.museumapp.museum.itemdetails.ItemDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensorPortrait">
        </activity>
    </application>

</manifest>